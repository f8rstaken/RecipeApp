<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.f8rstaken.recipesapp">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecipesApp"
        tools:targetApi="31">
        <activity
            android:name="com.f8rstaken.recipesapp.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.f8rstaken.recipesapp.LoginActivity"
            android:label="LoginActivity" />
        <activity
            android:name="com.f8rstaken.recipesapp.RegisterActivity"
            android:label="RegisterActivity" />
        <activity
            android:name="com.f8rstaken.recipesapp.RecipeAdderActivity"
            android:label="RecipeAdderActivity" />
        <activity
            android:name="com.f8rstaken.recipesapp.IngredientAdder"
            android:label="IngredientAdderActivity" />
        <activity
            android:name="com.f8rstaken.recipesapp.RecipeBrowserActivity"
            android:label="RecipeBrowserActivity" />
        <activity
            android:name="com.f8rstaken.recipesapp.IngredientEditor"
            android:label="IngredientEditorActivity" />
        <activity
            android:name="com.f8rstaken.recipesapp.RecipeViewerActivity"
            android:label="RecipeViewerActivity" />
    </application>

</manifest>